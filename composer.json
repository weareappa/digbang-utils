{
    "name": "weareappa/utils",
    "description": "Utility belt for your Laravel project",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Darío Govergun",
            "email": "dgovergun@digbang.com"
        },
        {
            "name": "Juan Falcón",
            "email": "jfalcon@digbang.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0.2",
        "illuminate/support": "^8.0 || ^9.0",
        "illuminate/contracts": "^8.0 || ^9.0",
        "illuminate/http": "^8.0 || ^9.0",
        "illuminate/pagination": "^8.0 || ^9.0",
        "laravel-doctrine/fluent": "^1.2",
        "laravel-doctrine/orm": "^1.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^8.5 || ^9.5"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Utils\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Utils\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "./vendor/bin/phpunit",
            "./vendor/bin/php-cs-fixer fix --allow-risky=yes"
        ]
    }
}
